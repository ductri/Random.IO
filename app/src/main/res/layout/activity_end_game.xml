<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_end_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@mipmap/background7"
    tools:context="hackathon_mobile_2016.randomio.activities.MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backBtn"
            android:background="@mipmap/back5"
            android:scaleType="center"
            android:textAlignment="center"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:scaleY="0.45" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:text="@string/team"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#FF0000"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:text="72"
                    android:textSize="36sp"
                    android:fontFamily="casual"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:textStyle="normal|bold"
                    android:textColor="#000000"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                android:layout_weight="0.3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:text="@string/player_name"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="@string/player_demo"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:text="49"
                    android:textSize="24sp"
                    android:fontFamily="casual"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:textStyle="normal|bold"
                    android:textColor="#FF0000"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                android:layout_weight="0.3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:text="@string/player_name"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="Rhum"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:text="23"
                    android:textSize="24sp"
                    android:fontFamily="casual"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:textStyle="normal|bold"
                    android:textColor="#FF0000"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <ImageView
                android:layout_width="122dp"
                android:layout_gravity="center"
                android:layout_height="106dp"
                android:background="@mipmap/win" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="0.4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:text="@string/team"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#0000FF"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:text="28"
                    android:textSize="36sp"
                    android:fontFamily="casual"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:textStyle="normal|bold"
                    android:textColor="#000000"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                android:layout_weight="0.3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:text="@string/player_name"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="Bourbon"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:text="18"
                    android:textSize="24sp"
                    android:fontFamily="casual"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:textStyle="normal|bold"
                    android:textColor="#0000FF"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                android:layout_weight="0.3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:text="@string/player_name"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="Vodka"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:text="10"
                    android:textSize="24sp"
                    android:fontFamily="casual"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:layout_height="match_parent"
                    android:textStyle="normal|bold"
                    android:textColor="#0000FF"
                    android:textAlignment="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <ImageView
                android:layout_width="122dp"
                android:layout_height="106dp"
                android:layout_gravity="center"
                android:background="@mipmap/fail" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
